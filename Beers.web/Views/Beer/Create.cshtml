@model Beers.web.Models.Beer.BeerViewModelCreate

<h2>Create</h2>
@using (Html.BeginForm("Create", "Beer", FormMethod.Post))
{
    <div class="form-control">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name)
    </div>
    <div class="form-control">
        @Html.LabelFor(m => m.Graduation)
        @Html.TextBoxFor(m => m.Graduation)
    </div>
    <div class="form-control">
        @Html.DropDownListFor(m => m.BeerTypeId, Model.BeerTypeDtoList)
    </div>
    <div class="form-control">
        @Html.DropDownListFor(m => m.CountryId, Model.CountryDtoList, new { id = "cmbCountry" })
    </div>
    <div>

    </div>
    <div>
        <input type="submit" value="Create Beer" />
    </div>
}
